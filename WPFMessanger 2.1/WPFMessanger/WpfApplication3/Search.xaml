<Window x:Class="WpfApplication3.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication3"
        mc:Ignorable="d"
        Title="Search" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
        <Button x:Name="button" Content="Search" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" Width="75" Height="28" Click="button_Click"/>
        <ListBox x:Name="LBS" HorizontalAlignment="Left" Height="216" VerticalAlignment="Top" Width="272" Margin="10,43,0,0" PreviewMouseUp="listBox_PreviewMouseUp"   />

    </Grid>
</Window>
