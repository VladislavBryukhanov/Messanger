<Window x:Class="WpfApplication3.Peoples"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Peoples" Height="300" Width="300">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="269" VerticalAlignment="Top" Width="292">
            <TabItem Header="Dialogs">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="LBP" PreviewMouseUp="LBP_PreviewMouseUp" />
                </Grid>
            </TabItem>
            <TabItem Header="Chats" >
                <!--IsEnabled="False"-->
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="LBC" PreviewMouseRightButtonUp="LBC_PreviewMouseRightButtonUp" PreviewMouseLeftButtonUp="LBC_PreviewMouseLeftButtonUp"/>
                    <Button x:Name="NewChat" Content="Create a new chat" HorizontalAlignment="Left" Margin="172,0,0,10" VerticalAlignment="Bottom" Width="104" Click="NewChat_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
